<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="100%">
    <fx:Script><![CDATA[

                public var pass:Boolean = false;
                public var submit1:String;
                public var alertText:String = '';

                public function submit():void{
                    if (foodDrinkText.text == '') {
                        alertText = 'Please fill in the entry';
                    }
                    else {
                        pass = true;
                        submit1 = foodDrinkText.text;
                    }
                }
                public function clear():void{
                    pass = false;
                    foodDrinkText.text = '';
                    submit1 = foodDrinkText.text;
                }

        ]]></fx:Script>
    <s:VGroup height="100%" width="100%">
        <s:Group height="41%" width="100%">
            <s:VGroup height="100%" width="100%">
                <s:Label text="What and how much did you eat or drink?" height="10%" width="100%" fontSize="20"/>
                <s:BorderContainer height="90%" width="100%" right="0"
                                   cornerRadius="4" borderWeight="2"
                                   backgroundAlpha="0">
                    <s:RichEditableText id="foodDrinkText" color="0x000000"
                                        width="100%" height="100%"
                                        backgroundColor="0xffffff"
                                        paddingTop="5" fontSize="30"/>
                </s:BorderContainer>
            </s:VGroup>
        </s:Group>
        <s:HGroup height="59%" width="100%">
            <s:Group height="100%" width="50%">
                <s:Spacer height="100%" width="100%"/>
            </s:Group>
            <s:Group height="100%" width="50%">
                <s:Spacer height="100%" width="100%"/>
            </s:Group>
        </s:HGroup>
    </s:VGroup>
</s:Group>