		>
	<fx:Style source="/collaboRhythm/plugins/bloodPressure/view/ChartStyles.css" />
	<view:BloodPressureFullView id="bloodPressureFullView" width="100%" height="100%"
								rangeChartVisible="false"
								chartFooterVisible="false"
								chartsOnlyViewMode="true"
								showFocusTimeMarker="false"
								initialDurationTime="{7 * McCuneChart.DAYS_TO_MILLISECONDS}"
								scrollEnabled="false"
			/>
	<fx:Script>
		<![CDATA[
		import collaboRhythm.shared.apps.bloodPressure.model.BloodPressureModel;

		import com.dougmccune.controls.McCuneChart;

		public function get model():BloodPressureModel
		{
			return bloodPressureFullView.model;
		}

		public function set model(model:BloodPressureModel):void
		{
			bloodPressureFullView.model = model;
		}

		override protected function initializationComplete():void
		{
			super.initializationComplete();
		}
		]]>
	</fx:Script>
